<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myungjong.musicfun.Activity.RegisterActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_height="150dp"
        android:id="@+id/login_logo"
        android:background="@mipmap/logo0831221"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="125dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_column"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登入"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:paddingStart="9dp"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView6"
                android:background="@drawable/left_radius"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/login_email"
                android:background="#00ffffff"
                android:hint="電子郵件"
                android:paddingLeft="10dp"
                android:backgroundTint="#cdcdcd"
                android:textColor="#6c6c6c"
                android:textColorHint="#c9c9c9"
                android:inputType="textEmailAddress"
                android:theme="@style/EditTextColorCustom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="28dp">

            <TextView
                android:paddingStart="9dp"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView7"
                android:background="@drawable/left_radius"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/login_pw"
                android:background="#00ffffff"
                android:hint="密碼"
                android:paddingLeft="10dp"
                android:backgroundTint="#cdcdcd"
                android:textColor="#6c6c6c"
                android:textColorHint="#c9c9c9"
                android:password="true"
                android:theme="@style/EditTextColorCustom"/>
        </LinearLayout>

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="註冊"
            android:id="@+id/btn_register"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="44dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/radius_stroke"
            android:gravity="center_vertical|center_horizontal"
            android:padding="0dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="登入"
            android:id="@+id/login_submit"
            android:background="@drawable/click_gradient"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>

