<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.myungjong.musicfun.Activity.RegisterActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@mipmap/logo083122222"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:paddingTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/register_submit"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <TextView
                android:paddingStart="9dp"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView2"
                android:background="@drawable/left_radius"
                android:drawableStart="@drawable/ic_account_circle_black_24dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/register_name"
                android:background="#00ffffff"
                android:hint="姓名"
                android:paddingLeft="10dp"
                android:backgroundTint="#cdcdcd"
                android:textColor="#6c6c6c"
                android:textColorHint="#c9c9c9"
                android:inputType="textEmailAddress"
                android:theme="@style/EditTextColorCustom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:paddingStart="9dp"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView6"
                android:background="@drawable/left_radius"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/register_email"
                android:background="#00ffffff"
                android:hint="電子郵件"
                android:paddingLeft="10dp"
                android:backgroundTint="#cdcdcd"
                android:textColor="#6c6c6c"
                android:textColorHint="#c9c9c9"
                android:inputType="textEmailAddress"
                android:theme="@style/EditTextColorCustom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_stroke2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:paddingStart="9dp"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView7"
                android:background="@drawable/left_radius"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/register_pw"
                android:background="#00ffffff"
                android:hint="密碼"
                android:paddingLeft="10dp"
                android:backgroundTint="#cdcdcd"
                android:textColor="#6c6c6c"
                android:textColorHint="#c9c9c9"
                android:password="true"
                android:theme="@style/EditTextColorCustom" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="註冊"
        android:id="@+id/register_submit"
        android:background="@drawable/bottom_layout_gradient"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="會員註冊"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

