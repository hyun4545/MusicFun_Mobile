<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:text="If You Do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_title"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@drawable/bottom_layout_gradient11"
        android:padding="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_gradient2"
        android:clickable="true"
        android:padding="10dp"
        android:id="@+id/edit_edit">

        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_mode_edit_black_36px"
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_width="70dp" />

        <TextView
            android:text="編輯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#9c9c9c"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_gradient2"
        android:clickable="true"
        android:padding="10dp"
        android:id="@+id/edit_addList">

        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_playlist_add_black_24px"
            android:id="@+id/imageView3"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_width="70dp" />

        <TextView
            android:text="加入清單"
            android:textColor="#9c9c9c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:textAlignment="center"

            android:padding="10dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_gradient2"
        android:clickable="true"
        android:padding="10dp"
        android:id="@+id/edit_delete">

        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_delete_black_36px"
            android:id="@+id/imageView2"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_width="70dp" />

        <TextView
            android:text="刪除"
            android:textColor="#9c9c9c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"

            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>