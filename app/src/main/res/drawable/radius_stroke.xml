<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item  android:state_pressed="true"  >
        <shape  >
            <gradient
                android:angle="180"

                android:endColor="#6433cccc"
                android:centerColor="#644395cb"
                android:startColor="#64b54ce4"
                android:type="linear" />


            <corners
                android:radius="10dp"   >
            </corners>
        </shape>

    </item>
    <item  >
        <shape >

            <gradient
                android:angle="180"

                android:endColor="#9633cccc"
                android:centerColor="#964395cb"
                android:startColor="#96b54ce4"
                android:type="linear" />



            <corners
                android:radius="10dp"   >
            </corners>
        </shape>

    </item>
    <!-- White Top color -->


</selector>

