<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="5"
        android:background="@drawable/bottom_layout_gradient"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/notification_img"
            android:padding="18dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true"
            android:theme="@style/ProgressBarColorCustom"
            android:progressDrawable="@drawable/bottom_layout_gradient"
            android:layout_marginRight="10dp"
            android:id="@+id/notification_loader"
            android:visibility="invisible"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:background="@mipmap/musicfun04" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="3">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:background="@drawable/under_thin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Russian Roulette"
                android:id="@+id/notification_singname"
                android:textColor="#868686"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Red Velvet"
                android:id="@+id/notification_author"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textColor="#aaa" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton5"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_media_previous"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/notification_pause"
                    android:background="@android:drawable/ic_media_play"
                    android:layout_gravity="center" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/notification_play"

                    android:layout_gravity="center"
                    android:background="@android:drawable/ic_media_pause" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton6"
                    android:layout_gravity="center"
                    android:background="@android:drawable/ic_media_next" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_menu_close_clear_cancel"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/notification_cancel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView12"
                    android:textColor="#868686"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:padding="0dp"
                    android:layout_margin="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView10"
                    android:textColor="#868686"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:padding="0dp"
                    android:layout_margin="0dp" />
            </FrameLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>